<% provide(:title, "Our Record Collection") %>

<p id="notice"><%= notice %></p>

<div class="w3-content w3-container w3-padding-64">
  
  <h1 class="w3-center">BROWSE OUR RECORD COLLECTION</h1>
  


    <% @items.each do |item| %>
    
    
      
      <div class="w3-col m4 w3-panel">
        
        <%= image_tag(item.albumart, :class => "itemholsIm") if item.albumart.attached? %>
      
     

        </div>
        
        <div class="w3-col m8 w3-panel">
          <div class="myCols">
          
        <p><strong>Artist: <%= item.albumartist %></strong><br/>
        Album: <%= item.albumtitle %></p>
        <p>Price: <%= number_to_currency(item.albumprice, :unit => "â‚¬") %><br/>
        Genre: <%= item.albumgenre %><br/>
        Musical Format: <%= item.albumformat %>
        </p>
        
        <p>
        <%= link_to 'Show More >>', item, :class => "w3-button w3-large w3-black w3-hover-deep-orange w3-hover-deep-orange", :role => "button"%>
        
        <% if user_signed_in? %>
        <a href="/cart/<%= item.id %>" class="w3-button w3-large w3-black w3-hover-deep-orange">Add me to cart!</a>
        <% end %>
        
       <% if user_signed_in? && current_user.admin? %>
          <%= link_to 'Edit', edit_item_path(item), :class => "w3-button w3-large w3-black w3-hover-deep-orange", :role => "button"  %>
          <%= link_to 'Destroy', item, method: :delete, data: { confirm: 'Are you sure?' }, :class => "w3-button w3-large w3-black w3-hover-deep-orange", :role => "button"  %>
        <% end %>
        </p></div>
          
        </div>
    
      
    <% end %>
    
    <div class="bottomButtons">   
    
  <% if user_signed_in? && current_user.admin? %>
    
       <%= link_to 'Create New Record',  new_item_path, :class => "w3-button w3-large w3-black w3-hover-deep-orange", :role => "button" %>
       
       <% end %>
    </div>


<br>



</div>